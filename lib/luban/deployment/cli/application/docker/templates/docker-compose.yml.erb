version: "3"

services:
  <%= application %>:
    build:
      context: ./context
      args:
        luban_uid: $LUBAN_UID
        luban_user: $LUBAN_USER
        luban_root_path: $LUBAN_ROOT_PATH
    image: <%= build[:image_tag] %>
    environment:
      TZ: <%= timezone %>
    entrypoint: /bin/bash
    stdin_open: true
    tty: true
